<Window x:Class="MvvmClient.AddNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvvmClient"
        mc:Ignorable="d"
        Title="AddNote" Height="134" Width="328">
    <Grid Margin="0,-21,0,0">
        <TextBlock Margin="22,34,252,85">Заметка:</TextBlock>
        <TextBox Margin="75,32,10,83" Text="{Binding NoteName}"></TextBox>
        <Button Margin="164,88,10,26" Command="{Binding AddCommand}">Добавить заметку</Button>
    </Grid>
</Window>
